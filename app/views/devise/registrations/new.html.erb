<div class="sign-up-wrapper">

  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email*" %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),label: false, placeholder: "Password*" %>
    <%= f.input :password_confirmation, required: true,label: false, placeholder: "Password*" %>
    <%= f.input :first_name, required: true,label: false, placeholder: "First Name" %>
    <%= f.input :last_name, label: false, placeholder: "Last Name" %>
    <%= f.input :age, required: true, label: false, placeholder: "Age" %>
    <%= f.input :course, required: true, label: false, placeholder: "Field of Study" %>
    <%= f.input :semester, required: true, label: false, placeholder: "Semester" %>
    <%= f.input :hobby, required: true, label: false, placeholder: "Hobbies" %>
    <%= f.input :music, required: true, label: false, placeholder: "Favourite Music Genres" %>
    <%= f.input :quote, required: true, label: false, placeholder: "Favourite Quote" %>
    <div class="sign-up-photo">
      <%= f.input :photo, label: false%>
      <%= f.input :photo_cache, as: :hidden %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "index-buttons" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
