
<div class="col-md-6 col-md-offset-3">
<div class="text-center">
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers_from="<%= @markers_from.to_json %>"
  data-markers_to="<%= @markers_to.to_json %>"
></div>


<h2>Available Passengers</h2>


  <% @requests.each do |request| %>
  <div class = "list-group">
    <ul>
      <li class="list-group-item">User Id: <%= request.user_id  %></li>
      <li class="list-group-item">Start Time: <%= request.start_time%></li>
      <li class="list-group-item">Stop Time: <%= request.stop_time %></li>
      <li class="list-group-item">From Longitude: <%= request.from_lng %></li>
      <li class="list-group-item">From Latitude: <%= request.from_lat %></li>
      <li class="list-group-item">To Longitude: <%= request.to_lng %></li>
      <li class="list-group-item">To Latitude: <%= request.to_lat %></li>
    </ul>
  </div>
<% end %>


<button id="Share ride" class="btn btn-primary">


  Share your ride

</button>
</div>
</div>
