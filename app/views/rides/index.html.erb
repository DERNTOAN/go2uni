  <div class="map-dummy">
    <div
    id="map-rides-index"
    style="width: 100%;
    height: 100%;"
    data-counterparts="<%= @drivers.to_json %>"
    data-mapbounds = "<%= @mapbounds.to_json %>"

    ></div>
  </div>

  <div class="buttons-box form-opener">
    <p>

      <a href="" class="btn index-buttons" id="new-ride-button">Share your ride</a>
    </p>
    <p>
      <a href="" class="btn index-buttons" id="new-request-button">Ride with new friends</a>
    </p>
  </div>


  <div class="new-ride-form hidden" id="x-button">
    <div id="new-ride-close-button" class="close-button">
      <i class="fas fa-times" style="font-size:26px;"></i>
    </div>


    <%= form_for @ride, html: {class: "form-ride"} do |f| %>
    <div class="form-group flex-group">
      <!-- <%= f.label :departure_time, "Departure" %> -->
      <i class="far fa-clock"></i>
      <%=  f.datetime_field :departure_time, value: "#{(Time.now + 1800).strftime("%Y-%m-%dT%H:%M")}", class: "form-control" %>
    </div>

    <div class="form-group flex-group">
      <!-- <%= f.label :from_address, "From" %> -->
      <i class="fas fa-map-marker"></i>
      <%= f.text_field :from_address, class: "form-control", placeholder: "Address" %>
    </div>

    <div class="form-group to-from-radio">
      <div class="to-button">
        <%= f.radio_button :direction, "to", class:"hidden" %>
        <%= f.label :direction_to, "<i class='fas fa-angle-double-down'></i>".html_safe, class:"btn btn-standard"%>
      </div>
      <div class="from-button">
        <%= f.radio_button :direction, "from", class:"hidden"%>
        <%= f.label :direction_from, "<i class='fas fa-angle-double-up'></i>".html_safe, class:"btn btn-standard"%>
      </div>
    </div>

    <h3 class="uni-name">Universit√§t Bayreuth</h3>

    <div class="form-group flex-group">
      <i class="fas fa-users"></i>
      <%= f.number_field :seats, as: :integer, class: "form-control", placeholder: "Number of seats" %>
    </div>

    <%= f.submit "share your ride", class: "btn index-buttons" %>
    <% end %>

  </div>



  <div class="new-request-form hidden" id="x-button">
    <div id="new-request-close-button" class="close-button">
      <i class="fas fa-times" style="font-size:26px;"></i>
    </div>


    <%= form_for @request, html: {class: "form-ride"} do |f| %>

    <div class="form-group date_field flex-group">
        <i class="far fa-calendar-alt"></i>
        <%=  f.datetime_field :start_time, value: "#{Time.now.strftime("%Y-%m-%dT%H:%M")}", class: "form-control"%>
    </div>

    <div class="form-group to_time_field time_field flex-group">
      <i class="far fa-clock"></i>
      <%=  f.time_field :stop_time, value: "#{(Time.now + 3600).strftime("%H:%M")}", class: "form-control" %>
    </div>

    <div class="form-group flex-group">
      <i class="fas fa-map-marker"></i>
      <%= f.text_field :from_address, class: "form-control", placeholder: "from here" %>
    </div>

    <div class="form-group flex-group">
      <i class="fas fa-compass"></i>
      <%= f.text_field :to_address, class: "form-control", placeholder: "to there" %>
    </div>

    <%= f.submit "Submit", class: "btn index-buttons" %>
    <% end %>
  </div>
</div>


