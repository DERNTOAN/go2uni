  <div class="map-dummy">
    <div
    id="map-rides-index"
    style="width: 100%;
    height: 100%;"
    data-counterparts="<%= @drivers.to_json %>"

    ></div>
  </div>

  <div class="buttons-box form-opener">
    <p>
      <a href="" class="btn index-buttons" id="new-ride-button">Share your ride</a>
    </p>
    <p>
      <a href="" class="btn index-buttons" id="new-request-button">Ride with now friends</a>
    </p>
  </div>


  <div class="new-ride-form hidden" id="x-button">
    <div id="new-ride-close-button" class="close-button">
      <i class="fas fa-times" style="font-size:26px;"></i>
    </div>


    <%= form_for @ride do |f| %>
    <div class="form-group flex-group">
      <!-- <%= f.label :departure_time, "Departure" %> -->
      <i class="far fa-clock"></i>
      <%=  f.datetime_field :departure_time, class: "form-control" %>
    </div>
    <div class="form-group flex-group">
      <!-- <%= f.label :from_address, "From" %> -->
      <i class="fas fa-map-marker"></i>
      <%= f.text_field :from_address, class: "form-control", placeholder: "from here" %>
    </div>
    <div class="form-group flex-group">
      <!-- <%= f.label :to_address, "To" %> -->
      <i class="fas fa-compass"></i>
      <%= f.text_field :to_address, class: "form-control", placeholder: "to there" %>
    </div>
    <div class="form-group flex-group">
      <i class="fas fa-users"></i>
      <%= f.number_field :seats, as: :integer, class: "form-control", placeholder: "Number of seats" %>
    </div>
    <%= f.submit "share your ride", class: "btn btn-standard form-control" %>
    <% end %>
  </div>



  <div class="new-request-form hidden" id="x-button">
    <div id="new-request-close-button" class="close-button">
      <i class="fas fa-times" style="font-size:26px;"></i>
    </div>


    <%= form_for @request do |f| %>

    <div class="form-group time-group">
      <div class="date_field flex-group">
        <i class="far fa-calendar-alt"></i>
        <%=  f.datetime_field :start_time, class: "form-control"%>
      </div>
    </div>

    <div class="form-group to_time_field time_field flex-group">
      <i class="far fa-clock"></i>
      <%=  f.time_field :stop_time, class: "form-control" %>
    </div>

    <div class="form-group flex-group">
      <i class="fas fa-map-marker"></i>
      <%= f.text_field :from_address, class: "form-control", placeholder: "from here" %>
    </div>

    <div class="form-group flex-group">
      <i class="fas fa-compass"></i>
      <%= f.text_field :to_address, class: "form-control", placeholder: "to there" %>
    </div>

    <%= f.submit "Submit", class: "btn btn-standard form-control" %>
    <% end %>
  </div>
</div>


