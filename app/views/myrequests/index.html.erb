<% content_for :title, "Your Requests" %>


<div class="myrequest-wrapper">
  <div
  class="myrequest-map"
  id="mapmyrequestsindex"
  style="width: 100%;
  height: 50vh;"
  data-markers_from="<%= @markers_from.to_json %>"
  data-map_as="driver"
  data-mapbounds = "<%= @mapbounds.to_json %>"

  >
  </div>
  <div class="container">
    <div class="row myrequest-show">
      <div class="myrequests-title">
        <h1>Your Requests</h1>
      </div>
      <% @myrequests.each do |request| %>
      <div class="myrequest">
        <div class="myrequest-times">
          <h2><%= request.start_time.strftime("%d.%m.%y")%></h2>
          <h3><%= request.start_time.strftime("%H:%M") %> - <%= request.stop_time.strftime("%H:%M") %></h3>
        </div>
        <div class="trip-info">
          <div class="trip-align-top">
            <p> <%= request.from_address.split(",").first %> to <%= request.to_address.split(",").first %>
            </p>
          </div>
        </div>
        <div class="badge-offers"><%= request.offers.count %> Offers</div>

        <%= link_to "", myrequest_path(id: request.id), class: "myrequest-link" %>
      </div>
      <% end %>
    </div>
</div>
</div>

