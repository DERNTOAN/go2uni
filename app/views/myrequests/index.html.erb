<div class="myrequest-wrapper">
  <div class="container">
    <div class="text-center">
      <h1>Your requests</h1>
    </div>
    <% @myrequests.each do |request| %>
    <div class="row">
      <div class="myrequest">
        <div class="myrequest-body">
          <h5>Request No.</h5>
          <p><%= request.id %></p>
        </div>
        <div class="myrequest-body">
          <h5>When: </h5>
          <p><%= request.start_time.strftime("%H:%M") %> - <%= request.stop_time.strftime("%H:%M") %></p>
        </div>
        <div class="myrequest-body">
          <h5>Offers:</h5>
          <p><%= @offers.where(request_id: request.id).count %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

