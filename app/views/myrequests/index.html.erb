  <div class="message">
    <div class="message-name">
      <h3>Request No.<%= request.id %></h3>
      <p>When: <%= request.start_time.strftime("%H:%M") %> - <%= request.stop_time.strftime("%H:%M") %></p>
    </div>
    <div class="message-body">
      <p><strong>I am not sure yet!</strong></p>
      <p>
        I am not sure yet! I might be in Shanghai at this moment... Can I tell you later?
      </p>
    </div>
    <div class="message-status">
      <p class="status pending">Pending</p>
      <p class="price">â‚¬345</p>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">

    <% @myrequests.each do |request| %>
