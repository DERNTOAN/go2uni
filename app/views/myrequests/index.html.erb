<div class="myrequest-wrapper">
<div class="container">
  <% @myrequests.each do |request| %>
    <div class="row">
      <div class="myrequest">
        <div class="myrequest-show">
          <h4>Request No.<%= request.id %></h4>
          <p>When: <%= request.start_time.strftime("%H:%M") %> - <%= request.stop_time.strftime("%H:%M") %></p>
          <p>Route: <%= request.from_address %> to <%= request.to_address %></p>
        </div>
      </div>
    </div>
    <div class="row">
      <h5>Your Offers</h5>
    </div>
    <div class="row">
      <div class="myrequest">
        <% @offers.where(request_id: request.id).each do |offer| %>
          <div class="myrequest-body">
            <h5>Offer No.</h5>
            <p><%= offer.id %></p>
          </div>
          <div class="myrequest-body">
            <%= image_tag(offer.ride.user.photo, class: "avatar-large") %>
            <p><%= offer.ride.user.first_name %></p>
          </div>
          <div class="myrequest-body">
            <h5>Departure-Time</h5>
            <p><%= offer.ride.departure_time.strftime("%H:%M") %></p>
          </div>
            <p>From: <%= offer.ride.from_address %></p>
            <p>From: <%= offer.ride.to_address %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
</div>
<div class="container">
  <div class="row">

    <% @myrequests.each do |request| %>
    <div class="col-xs-4">
      <div>
        <ul class="list-group">
          <a href="myrequests/<%= request.id %>"><li class="list-group-item active"> Request id: <%=  request.id %></li></a>
          <li class="list-group-item"> start time: <%=  request.start_time %></li>
          <li class="list-group-item"> stop time: <%= request.stop_time %> </li>
          <li class="list-group-item"> from lng: <%= request.from_lng %> </li>
          <li class="list-group-item"> fom lat: <%= request.from_lat %> </li>
          <li class="list-group-item"> to lng: <%= request.to_lng %> </li>
          <li class="list-group-item"> to lat: <%= request.to_lat %> </li>
        </ul>
      </div>
    </div>
      <% end %>
  </div>
</div>
